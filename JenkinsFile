@Library('my-libs') _
pipeline{
    agent any
    tools{
        maven 'maven-3.9'
    }
        stages{
            stage("Git-Checkout"){
                steps{
                    git 'https://github.com/javahometech/my-app'
                }
            }
              stage("maven-build"){
                steps{
                     sh "mvn clean package"
                     sh "mv target/myweb*.war target/myweb.war"
                }
            }
            stage("Deploy into tomcat"){
                steps{
                      tomcat( " 'Dev-TomcatP' ", "172.31.43.147")
                     }
                }
            }
        }
        post{
            always{
                cleanWs()
            }
        }

        
    
    
